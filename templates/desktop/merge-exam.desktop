[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin
MimeType=application/pdf;text/plain;text/x-markdown;text/x-python;text/x-c;text/x-c++;image/png;image/jpeg;image/webp;image/gif;image/bmp;image/tiff;
Actions=mergeExam;
X-KDE-Priority=TopLevel

[Desktop Action mergeExam]
Name=Merge Exam (LLM)
Icon=application-pdf
Exec=gnome-terminal -- bash -c '$HOME/.local/bin/merge-exam.sh --keep-tex "$@"' _ %F
