[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin
MimeType=text/x-python;text/x-script.python;application/x-python;text/javascript;application/javascript;text/x-java;text/x-c;text/x-c++;text/x-csrc;text/x-chdr;text/x-rustsrc;text/x-go;text/x-ruby;application/x-shellscript;text/x-haskell;text/plain;
X-KDE-Submenu=Studify
Actions=studifyAlgo;studifyLang;studifyOS;studifyDSP;studifyGameTheory;
X-KDE-Priority=TopLevel

[Desktop Action studifyAlgo]
Name=Algorithm (LLM)
Icon=text-x-script
Exec=gnome-terminal -- $HOME/.local/bin/studify-algo.sh %F

[Desktop Action studifyLang]
Name=Language (LLM)
Icon=text-x-script
Exec=gnome-terminal -- $HOME/.local/bin/studify-lang.sh %F

[Desktop Action studifyOS]
Name=OS (LLM)
Icon=text-x-script
Exec=gnome-terminal -- $HOME/.local/bin/studify-os.sh %F

[Desktop Action studifyDSP]
Name=DSP (LLM)
Icon=text-x-script
Exec=gnome-terminal -- $HOME/.local/bin/studify-dsp.sh %F

[Desktop Action studifyGameTheory]
Name=Game Theory (LLM)
Icon=text-x-script
Exec=gnome-terminal -- $HOME/.local/bin/studify-game-theory.sh %F
